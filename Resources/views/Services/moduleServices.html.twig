{#{admincategorymenu}#}
{#<div class="z-admin-content clearfix">#}
    {#{modgetinfo modname=$currentmodule info='displayname' assign='displayName'}#}
    {#{modgetimage modname=$currentmodule assign='image'}#}
    {#{moduleheader modname=$currentmodule type='admin' title=$displayName putimage=true image=$image}<h3>#}
    <h3>
        <span class="fa fa-paperclip"></span>
        {% trans %}Module services{% endtrans %}
        {{ pageSetVar('title', __('Module services')) }}
    </h3>

<p class="alert alert-info">{% trans %}Module Services are functions provided by the core or other modules for this module.{% endtrans %}</p>

{% if sublinks|length > 0 %}
    <ul class="list-unstyled">
        {% for sublink in sublinks %}
            <li><a href="{{ sublink.url }}" class="fa fa-cog">{{ sublink.text }}</a></li>
        {% endfor %}
    </ul>
{% else %}
    <p>{% trans %}There aren\'t any modules services available.{% endtrans %}</p>
{% endif %}
